<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--设置toolbar按钮颜色-->
    <style name="toolbar_style">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:homeAsUpIndicator">@mipmap/left_back</item>
    </style>

    <style name="wrap_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textview_18sp_style" parent="wrap_content_style">
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <dimen name="sp18">18sp</dimen>
</resources>
