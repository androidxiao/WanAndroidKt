<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/white"
        android:minHeight="@dimen/dp44"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:theme="@style/toolbar_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp44"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp16"
                android:src="@mipmap/left_back" />


            <kotyox.widget.XRoundEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_search"
                android:layout_toRightOf="@+id/iv_back"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp10"
                android:maxLines="1"
                android:hint="请输入关键字"
                android:gravity="center_vertical"
                android:textColorHint="@color/font_title_color"
                android:textSize="@dimen/font_26px"
                android:textColor="@color/c_222222" />

            <kotyox.widget.XRoundTextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:x_radius="@dimen/dp20"
                app:x_backgroundColor="@color/white"
                app:x_fontEnableColor="@color/colorPrimary"
                android:textSize="@dimen/font_32px"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:text="搜索"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dp16"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</layout>
